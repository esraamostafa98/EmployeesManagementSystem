@model WebApplication1.Models.EmployeeVM
@{
    ViewBag.Title = "Employee Details";

}
<a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Employees</a>
<br />

<h2>Employee Details</h2>

<form asp-controller="Employee" asp-action="Details" method="post" class="form-group">
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" disabled class="form-control" />

    <br />

    <label asp-for="Salary">Salary</label>
    <input type="text" asp-for="Salary" disabled class="form-control" />

    <br />

    <img src="~/Files/Photos/@Model.PhotoName" width="30px" height="30px" />
    <br />
    <a href="~/Files/Docs/@Model.CVName">Download File</a>
    <br />

    <label asp-for="Address">Address</label>
    <input type="text" asp-for="Address" disabled class="form-control" />

    <br />


    <label asp-for="Email">Email</label>
    <input type="email" asp-for="Email" disabled class="form-control" />

    <br />

    <label asp-for="HireDate">Hire Date</label>
    <input type="date" asp-for="HireDate" disabled class="form-control" />

    <br />

    <label asp-for="Note">Notes</label>
    <textarea asp-for="Note" class="form-control" disabled rows="4"></textarea>

    <br />

    <label asp-for="DepartmentId">Department</label>
    <select asp-for="DepartmentId" disabled asp-items="@(SelectList)ViewBag.DepartmentList">
        <option>Choose Department</option>
    </select>

    <br />
       <label asp-for="DistrictId">Country</label>
    <select asp-for="DistrictId" disabled asp-items="@(SelectList)ViewBag.CountryList">
        <option>Choose Country</option>
    </select>

    <br />

    <div class="custom-control custom-checkbox">
        <input type="checkbox" asp-for="IsActive" disabled class="custom-control-input">
        <label class="custom-control-label" asp-for="IsActive"> Is Active</label>
    </div>

    <br />


</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>